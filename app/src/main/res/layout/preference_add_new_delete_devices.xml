<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btn_addnew_delete_devices"
    android:layout_width="1315dp"
    android:layout_height="98dp"
    android:layout_marginLeft="262dp"
    android:layout_centerVertical="true">


    <View
        android:id="@+id/btn_addnew_button"
        android:layout_width="273dp"
        android:layout_height="74dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_addnew"/>

     <TextView
        android:id="@+id/add_new_button"
        android:layout_width="113dp"
        android:layout_height="36dp"
        android:text="@string/add_new"
        android:textAppearance="@style/add_new"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="19dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="80dp"/>

    <View
        android:id="@+id/btn_delete_devices_button"
        android:layout_width="360dp"
        android:layout_height="74dp"
        android:layout_marginLeft="304dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_delete_devices"/>


    <TextView
        android:id="@+id/delete_devices_button"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:text="@string/delete_devices"
        android:textAppearance="@style/delete_devices"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="384dp"
        android:layout_marginBottom="19dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="80dp"/>



</RelativeLayout>



